                row.find('#ok').html('');
                row.find('#rej').html('');
                $('.loader_overlay, #loading').show();
            }
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateOrderStatus", "Home")',
                data: "{'statusc':'" + '1' + "','statuss':'" + statuss + "','Webordern':'" + Webordern + "','AccountNum':'" + accountnum + "','DeliveryDate':'" + DeliveryDate + "'}",
